<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_bg">

    <!-- Bouton centré en bas -->
    <Button
        android:id="@+id/button"
        android:layout_width="244dp"
        android:layout_height="68dp"
        android:backgroundTint="#92C9F4"
        android:text="START"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785" />

    <!-- Applique le style de couleur ici -->
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.55"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.782"
    android:layout_marginBottom="145dp"  <!-- Marge depuis le bas -->
    app:layout_constraintBottom_toBottomOf="parent"  <!-- Aligné en bas -->
    app:layout_constraintLeft_toLeftOf="parent"     <!-- Centré horizontalement -->
    app:layout_constraintRight_toRightOf="parent" />  <!-- Centré horizontalement -->

</androidx.constraintlayout.widget.ConstraintLayout>